{
  "env": {
    "node": true,
    "es2020": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "standard",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "import",
    "n",
    "promise",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 2,
        "arrowParens": "always",
        "printWidth": 80,
        "semi":false
      }
    ],
    "camelCarse": "off",
    "no-useless-constructor": "off",
    "settings":{
      "import/parsers":{
        "@typescript-eslint/parser": [".ts", ".d.ts"]
      }
    }
  }
}
